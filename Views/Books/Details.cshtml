@model Book

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card shadow border-0">
                <!-- Header -->
                <div class="card-header bg-primary text-white py-2">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-book me-2"></i>
                        <h5 class="mb-0 fw-bold">Book Details</h5>
                    </div>
                </div>

                <div class="card-body p-3">
                    <div class="row align-items-start">
                        <div class="col-md-4 mb-3">
                            <div class="text-center">
                                <div class="border rounded p-2 bg-light">
                                    <img src="@($"{FileSettings.BooksImagesPath}/{Model.ImageURL}")"
                                         alt="@Model.Title"
                                         class="img-fluid rounded"
                                         style="height: 320px; object-fit: contain;">
                                </div>
                            </div>
                        </div>

                        <!-- Book Information -->
                        <div class="col-md-8">
                            <h4 class="text-primary fw-bold mb-3">@Model.Title</h4>

                            <div class="row g-2">
                                <!-- Author -->
                                <div class="col-12 mb-2">
                                    <div class="border rounded p-2 bg-light">
                                        <h6 class="text-primary mb-1">
                                            <i class="bi bi-person-fill me-1"></i>
                                            Author
                                        </h6>
                                        <p class="mb-0 fw-semibold">@Model.Author</p>
                                    </div>
                                </div>

                                <!-- ISBN & Category -->
                                <div class="col-md-6 mb-2">
                                    <div class="border rounded p-2 bg-light h-100">
                                        <h6 class="text-primary mb-1">
                                            <i class="bi bi-upc-scan me-1"></i>
                                            ISBN
                                        </h6>
                                        <p class="mb-0 fw-semibold small">
                                            @if (string.IsNullOrEmpty(Model.ISBN))
                                            {
                                                <span class="text-muted">No ISBN</span>
                                            }
                                            else
                                            {
                                                @Model.ISBN
                                            }
                                        </p>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-2">
                                    <div class="border rounded p-2 bg-light h-100">
                                        <h6 class="text-primary mb-1">
                                            <i class="bi bi-tags-fill me-1"></i>
                                            Category
                                        </h6>
                                        <p class="mb-0 fw-semibold small">@Model.Category?.Name</p>
                                    </div>
                                </div>

                                <!-- Publish Year & Copies -->
                                <div class="col-md-6 mb-2">
                                    <div class="border rounded p-2 bg-light h-100">
                                        <h6 class="text-primary mb-1">
                                            <i class="bi bi-calendar-fill me-1"></i>
                                            Publish Year
                                        </h6>
                                        <p class="mb-0 fw-semibold small">@Model.PublishYear</p>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-2">
                                    <div class="border rounded p-2 bg-light h-100">
                                        <h6 class="text-primary mb-1">
                                            <i class="bi bi-collection-fill me-1"></i>
                                            Available Copies
                                        </h6>
                                        <p class="mb-0">
                                            <span class="badge bg-primary p-2">@Model.AvailableCopies</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Description Section -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="border rounded p-2 bg-light">
                                <h6 class="text-primary mb-1">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Description
                                </h6>
                                <div class="p-1">
                                    @if (string.IsNullOrEmpty(Model.Description))
                                    {
                                        <p class="text-muted fst-italic mb-0 small">No description available for this book</p>
                                    }
                                    else
                                    {
                                        <p class="mb-0 lh-base small">@Model.Description</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="d-flex gap-2 justify-content-center">
                                <a asp-controller="Books" asp-action="Index" class="btn btn-primary px-3">
                                    <i class="bi bi-journals me-1"></i>All Books
                                </a>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-3">
                                    <i class="bi bi-house-door me-1"></i>Back to Home
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>