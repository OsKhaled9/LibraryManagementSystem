@model AddBorrowingForAdminViewModel

@{
    ViewData["Title"] = "Add Borrowing";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary fw-bold">
                    <i class="bi bi-journal-plus me-2"></i>Create Borrowing
                </h2>
            </div>

            <!-- Create Form -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-bookmark-plus me-2"></i>New Borrowing
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Borrowings" asp-action="AddBorrow" asp-route-id="@Model.BookId" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <!-- Book Selection -->
                        <div class="mb-3">
                            <label asp-for="BookId" class="form-label fw-bold">
                                <i class="bi bi-book me-2"></i>
                            </label>
                            <select asp-for="BookId" class="form-select">
                                <option value="">-- Select Book --</option>
                                @foreach (var book in Model.AvailableBooks)
                                {
                                    <option value="@book.Id">@book.Title - @book.Category.Name</option>
                                }
                            </select>
                            <span asp-validation-for="BookId" class="text-danger small"></span>
                        </div>

                        <!-- User Selection -->
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label fw-bold">
                                <i class="bi bi-person me-2"></i>
                            </label>
                            <select asp-for="UserId" class="form-select">
                                <option value="">-- Select User --</option>
                                @foreach (var user in Model.AvailableUsers)
                                {
                                    <option value="@user.Id">@($"{user.FirstName} {user.LastName}") - @user.UserType.TypeName</option>
                                }
                            </select>
                            <span asp-validation-for="UserId" class="text-danger small"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Create Borrowing
                            </button>

                            <a asp-controller="Borrowings" asp-action="AllBorrowings" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}