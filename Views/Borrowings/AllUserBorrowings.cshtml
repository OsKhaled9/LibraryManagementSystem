@model List<AllUserBorrowingsViewModel>
@{
    ViewData["Title"] = "My Borrowings";
    Layout = "_HomeLayout";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">My Borrowings</h4>
                </div>
                <div class="card-body">
                    <table class="table table-hover mb-0">
                        <thead class="table-primary">
                            <tr>
                                <th>Book</th>
                                <th>Borrow Date</th>
                                <th>Due Date</th>
                                <th>Return Date</th>
                                <th>Status</th>
                                <th>Penalty</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model is not null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.BookTitle</strong><br>
                                            <small>@item.BookAuthor</small>
                                        </td>
                                        <td>@item.BorrowDate.ToString("yyyy-MM-dd")</td>
                                        <td>@item.DueDate.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            @if (item.ReturnDate.HasValue)
                                            {
                                                @item.ReturnDate.Value.ToString("yyyy-MM-dd")
                                            }
                                            else
                                            {
                                                <text>-</text>
                                            }
                                        </td>
                                        <td>@item.Status</td>
                                        <td>$@item.PenaltyAmount</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        <i class="bi bi-info-circle text-info me-2"></i> No Borrowings found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function(){
            $('table').DataTable();
        });
    </script>
}
