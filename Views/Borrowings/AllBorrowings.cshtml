@model List<Borrowing>

@{
    ViewData["Title"] = "Borrowings";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Header with Back Button -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary fw-bold">
                    <i class="bi bi-journal-bookmark me-2"></i>All Borrowings
                </h2>
                <div>
                    <a asp-controller="Borrowings" asp-action="AddBorrow" class="btn btn-primary px-4">
                        <i class="bi bi-plus-circle me-1"></i> Add New Book
                    </a>
                    <a asp-controller="Admins" asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Borrowings Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th class="ps-4">Name</th>
                            <th>Book</th>
                            <th>Borrow Date</th>
                            <th>Due Date</th>
                            <th>Status</th>
                            <th>Total Fines</th>
                            <th class="text-center pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model is not null && Model.Any())
                        {
                            @foreach (var borrowing in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="ms-3">
                                                <strong class="text-dark">@($"{borrowing.User.FirstName} {borrowing.User.LastName}")</strong>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <strong class="text-primary">@borrowing.Book.Title</strong>
                                    </td>
                                    <td>@borrowing.BorrowDate.ToString("yyyy-MM-dd")</td>
                                    <td>@borrowing.DueDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @if (borrowing.Status == enBorrowStatus.Returned)
                                        {
                                            <span class="badge bg-success text-dark fs-6 status-badge">
                                                <i class="bi bi-check-circle me-1"></i>Returned
                                            </span>
                                        }
                                        else if (borrowing.DueDate < DateTime.Now)
                                        {
                                            <span class="badge bg-danger text-dark fs-6 status-badge">
                                                <i class="bi bi-exclamation-triangle me-1"></i>Overdue
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark fs-6 status-badge">
                                                <i class="bi bi-clock me-1"></i>@borrowing.Status
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (borrowing.PenaltyAmount > 0)
                                        {
                                            <span class="fw-bold text-danger">$@borrowing.PenaltyAmount.ToString()</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">No penalty</span>
                                        }
                                    </td>
                                    <td class="text-center pe-4">
                                        <!-- Details Button -->
                                        <a asp-controller="Borrowings" asp-action="BorrowDetails" asp-route-id="@borrowing.Id"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye me-1"></i> Details
                                        </a>

                                        @if (borrowing.Status != enBorrowStatus.Returned)
                                        {
                                            <!-- Return Button -->
                                            <a href="javascript:;"
                                               class="btn btn-outline-success btn-sm js-return"
                                               data-id="@borrowing.Id"
                                               data-url="/Borrowings/ReturnBook/"
                                               data-book="@borrowing.Book.Title"
                                               data-entity-type="Book">
                                                <i class="bi bi-arrow-return-left me-1"></i> Return
                                            </a>
                                        }
                                        else
                                        {
                                            <!-- Delete Button -->
                                            <a href="javascript:;"
                                               class="btn btn-outline-danger btn-sm js-delete"
                                               data-id="@borrowing.Id"
                                               data-url="/Borrowings/DeleteBorrow/"
                                               data-name="@borrowing.Book.Title"
                                               data-entity-type="Borrow">
                                                <i class="bi bi-trash me-1"></i> Delete
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    <i class="bi bi-info-circle text-info me-2"></i> No Borrowings found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/return-book.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        $(document).ready(function(){
            bootBoxReturn();
            bootBoxDelete();

            $('table').DataTable();
        });
    </script>
}