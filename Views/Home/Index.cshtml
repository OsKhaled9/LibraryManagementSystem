@model List<DisplayAllBooksViewModel>

@{
    ViewData["Title"] = "Our Books Collection";
    Layout = "_HomeLayout";
}

<div class="container mt-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary fw-bold">
                <i class="bi bi-book me-2"></i>Our Book Collection
            </h2>
            <p class="text-muted">Discover and borrow from our wide selection of books</p>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="row mb-4">
        <div class="col-md-6 mb-2">
            <div class="input-group">
                <span class="input-group-text bg-primary text-white">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text" class="form-control" placeholder="Search books by title, author, or category...">
            </div>
        </div>
        <div class="col-md-2 mb-2">
            <div class="d-flex gap-2">
                <button class="btn btn-primary w-100">
                    <i class="bi bi-search me-1"></i>Search
                </button>
                <button class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
            </div>
        </div>
    </div>
    <hr />

    <!-- Books Grid -->
    <div class="row g-3">
        @foreach (var book in Model)
        {
            <div class="col-md-6 col-lg-4 col-xl-3">
                <div class="card h-100 shadow-sm border-0">
                    <!-- Book Image -->
                    <div class="bg-light d-flex align-items-center justify-content-center p-2" style="height: 200px;">
                        <img src="@($"{FileSettings.BooksImagesPath}/{book.BookCover}")"
                             class="img-fluid"
                             style="max-height: 100%; max-width: 100%; object-fit: contain;"
                             alt="@book.Title" />
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title fw-bold text-dark mb-2">@book.Title</h6>
                        <div class="mb-2">
                            <small class="text-muted">
                                <i class="bi bi-person me-1"></i>@book.Author
                            </small>
                        </div>
                        <div class="mb-2">
                            <small class="text-muted">
                                <i class="bi bi-tag me-1"></i>@book.Category
                            </small>
                        </div>

                        <!-- Availability Status -->
                        <div class="mb-3">
                            <span class="badge @(book.BookCopies > 0 ? "bg-success" : "bg-danger") px-3 py-2">
                                <i class="bi @(book.BookCopies > 0 ? "bi-check-circle" : "bi-x-circle") me-1"></i>
                                @(book.BookCopies > 0 ? "Available" : "Not Available")
                            </span>
                        </div>

                        <!-- Details Button -->
                        <div class="mt-auto">
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary w-100">
                                <i class="bi bi-info-circle me-2"></i>Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>