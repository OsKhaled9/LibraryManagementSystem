@{
    ViewData["Title"] = "Home Page";
}

<!-- Header -->
<header class="bg-purple text-white py-4 mb-4 shadow">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold mb-2">Welcome to the One Reader Library</h1>
                <p class="lead mb-0">Manage your books, categories, and memberships with ease.</p>
            </div>
            <div class="col-md-4 text-md-end">
                <div class="d-inline-block p-3 rounded-circle bg-white text-center shadow">
                    <i class="bi bi-person-fill text-purple fs-1"></i>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card border-0 bg-purple text-white shadow-sm card-hover">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="card-title">Total Users</h4>
                            <h2 class="mb-0">1,245</h2>
                            <p class="mb-0">+12% from last month</p>
                        </div>
                        <i class="bi bi-people-fill fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 bg-success text-white shadow-sm card-hover">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="card-title">Total Books</h4>
                            <h2 class="mb-0">8,763</h2>
                            <p class="mb-0">+5% from last month</p>
                        </div>
                        <i class="bi bi-book-half fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 bg-warning text-white shadow-sm card-hover">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="card-title">Active Borrowings</h4>
                            <h2 class="mb-0">342</h2>
                            <p class="mb-0">-3% from last week</p>
                        </div>
                        <i class="bi bi-clock-history fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Section Cards -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card border-0 border-top border-4 border-purple shadow-sm h-100 card-hover">
                <div class="card-body text-center p-4">
                    <i class="bi bi-people-fill text-purple fs-1 mb-3"></i>
                    <h4 class="card-title fw-bold mb-3">Users</h4>
                    <p class="card-text mb-4">Add, update and manage all library users.</p>
                    <button class="btn btn-outline-primary rounded-pill px-4 btn-hover">View Users</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 border-top border-4 border-success shadow-sm h-100 card-hover">
                <div class="card-body text-center p-4">
                    <i class="bi bi-book-half text-success fs-1 mb-3"></i>
                    <h4 class="card-title fw-bold mb-3">Books</h4>
                    <p class="card-text mb-4">Browse, add, and manage library books.</p>
                    <button class="btn btn-outline-success rounded-pill px-4 btn-hover">View Books</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 border-top border-4 border-info shadow-sm h-100 card-hover">
                <div class="card-body text-center p-4">
                    <i class="bi bi-folder-fill text-info fs-1 mb-3"></i>
                    <h4 class="card-title fw-bold mb-3">Categories</h4>
                    <p class="card-text mb-4">Organize books into categories for easy access.</p>
                    <button class="btn btn-outline-info rounded-pill px-4 btn-hover">View Categories</button>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card border-0 border-top border-4 border-warning shadow-sm h-100 card-hover">
                <div class="card-body text-center p-4">
                    <i class="bi bi-arrow-left-right text-warning fs-1 mb-3"></i>
                    <h4 class="card-title fw-bold mb-3">Borrowings</h4>
                    <p class="card-text mb-4">Track book borrowings, returns, and penalties.</p>
                    <button class="btn btn-outline-warning rounded-pill px-4 btn-hover">View Borrowings</button>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card border-0 border-top border-4 border-danger shadow-sm h-100 card-hover">
                <div class="card-body text-center p-4">
                    <i class="bi bi-person-badge-fill text-danger fs-1 mb-3"></i>
                    <h4 class="card-title fw-bold mb-3">Memberships</h4>
                    <p class="card-text mb-4">Manage library memberships and members.</p>
                    <button class="btn btn-outline-danger rounded-pill px-4 btn-hover">View Memberships</button>
                </div>
            </div>
        </div>
    </div>
</div>