@model UserDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="text-primary fw-bold">
                    <i class="bi bi-person-badge-fill me-2"></i>User Details
                </h3>
                <a asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-people-fill me-1"></i>All Users
                </a>
            </div>

            <!-- Main Card -->
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-person-circle me-2"></i>User Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <!-- Left Column - Personal Info -->
                        <div class="col-md-8">
                            <div class="row g-3">
                                <!-- Full Name -->
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center p-3 bg-light rounded">
                                        <i class="bi bi-person-fill text-primary fs-5 me-3"></i>
                                        <div>
                                            <small class="text-muted d-block">Full Name</small>
                                            <strong>@Model.FullName</strong>
                                        </div>
                                    </div>
                                </div>

                                <!-- User Name -->
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center p-3 bg-light rounded">
                                        <i class="bi bi-at text-primary fs-5 me-3"></i>
                                        <div>
                                            <small class="text-muted d-block">User Name</small>
                                            <strong>@Model.UserName</strong>
                                        </div>
                                    </div>
                                </div>

                                <!-- Address -->
                                <div class="col-12">
                                    <div class="d-flex align-items-center p-3 bg-light rounded">
                                        <i class="bi bi-geo-alt-fill text-primary fs-5 me-3"></i>
                                        <div>
                                            <small class="text-muted d-block">Address</small>
                                            <strong>@Model.Address</strong>
                                        </div>
                                    </div>
                                </div>

                                <!-- Phone & Email -->
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center p-3 bg-light rounded">
                                        <i class="bi bi-telephone-fill text-primary fs-5 me-3"></i>
                                        <div>
                                            <small class="text-muted d-block">Phone</small>
                                            <strong>@Model.Phone</strong>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="d-flex align-items-center p-3 bg-light rounded">
                                        <i class="bi bi-envelope-fill text-primary fs-5 me-3"></i>
                                        <div>
                                            <small class="text-muted d-block">Email</small>
                                            <strong>@Model.Email</strong>
                                        </div>
                                    </div>
                                </div>

                                <!-- Birth Date & Status -->
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center p-3 bg-light rounded">
                                        <i class="bi bi-calendar-event-fill text-primary fs-5 me-3"></i>
                                        <div>
                                            <small class="text-muted d-block">Birth Date</small>
                                            <strong>@Model.BirthDate</strong>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="d-flex align-items-center p-3 bg-light rounded">
                                        <i class="bi bi-circle-fill text-primary fs-5 me-3"></i>
                                        <div>
                                            <small class="text-muted d-block">Status</small>
                                            <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-danger") fs-6">
                                                @Model.Status
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <!-- User Type -->
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center p-3 bg-light rounded">
                                        <i class="bi bi-award-fill text-primary fs-5 me-3"></i>
                                        <div>
                                            <small class="text-muted d-block">User Type</small>
                                            <strong>@Model.TypeOfUser</strong>
                                        </div>
                                    </div>
                                </div>

                                <!-- Role -->
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center p-3 bg-light rounded">
                                        <i class="bi bi-award-fill text-primary fs-5 me-3"></i>
                                        <div>
                                            <small class="text-muted d-block">Role</small>
                                            <strong>@Model.Role</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Right Column - Profile Image -->
                        <div class="col-md-4 text-center">
                            <div class="border rounded p-4 bg-light">
                                @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                                {
                                    <img src="@($"{FileSettings.UsersImagesPath}/{Model.ProfileImageUrl}")" alt="Profile"
                                         class="img-fluid rounded-circle shadow"
                                         style="width: 180px; height: 180px;">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-white shadow d-flex align-items-center justify-content-center mx-auto"
                                         style="width: 180px; height: 180px; border: 3px solid #dee2e6;">
                                        <i class="bi bi-person text-muted" style="font-size: 4rem;"></i>
                                    </div>
                                }
                                <div class="mt-3">
                                    <h5 class="text-primary">@Model.FullName</h5>
                                    <small class="text-muted">Library Member</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Borrowing Information Card -->
            <div class="card shadow-lg border-0 mt-4">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-book-half me-2"></i>Borrowing Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <!-- Total Books -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="d-flex align-items-center justify-content-center p-4 bg-success bg-opacity-10 rounded">
                                <i class="bi bi-bookstack text-success fs-1 me-4"></i>
                                <div class="text-center">
                                    <h2 class="text-success mb-1">@Model.TotalBorrowedBooks</h2>
                                    <small class="text-muted">Total Borrowed Books</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Borrowed Books List -->
                    @if (Model.BorrowedBooks is not null && Model.BorrowedBooks.Any())
                    {
                        <div class="mt-4">
                            <h6 class="text-muted mb-3">
                                <i class="bi bi-list-ul me-2"></i>Borrowing History
                            </h6>

                            @foreach (var borrowing in Model.BorrowedBooks)
                            {
                                <div class="card border-0 shadow-sm mb-3">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-md-6">
                                                <div class="d-flex align-items-center">
                                                    <i class="bi bi-book-fill text-primary fs-4 me-3"></i>
                                                    <div>
                                                        <h6 class="mb-1 text-dark">@borrowing.Book.Title</h6>
                                                        <div class="d-flex flex-wrap gap-3">
                                                            <small class="text-muted">
                                                                <i class="bi bi-calendar-check me-1"></i>Borrowed: @borrowing.BorrowDate.ToString("yyyy-MM-dd")
                                                            </small>
                                                            <small class="text-muted">
                                                                <i class="bi bi-calendar-x me-1"></i>Due: @borrowing.DueDate.ToString("yyyy-MM-dd")
                                                            </small>
                                                            @if (borrowing.ReturnDate.HasValue)
                                                            {
                                                                <small class="text-muted">
                                                                    <i class="bi bi-calendar-check me-1"></i>Returned: @borrowing.ReturnDate.Value.ToString("yyyy-MM-dd")
                                                                </small>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 text-md-end">
                                                @if (borrowing.Status == enBorrowStatus.Returned)
                                                {
                                                    <span class="badge bg-success text-dark fs-6">
                                                        <i class="bi bi-check-circle me-1"></i>Returned
                                                    </span>
                                                }
                                                else if (borrowing.DueDate < DateTime.Now)
                                                {
                                                    <span class="badge bg-danger text-dark fs-6">
                                                        <i class="bi bi-exclamation-triangle me-1"></i>Overdue
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark fs-6">
                                                        <i class="bi bi-clock me-1"></i>@borrowing.Status
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-book text-muted" style="font-size: 4rem;"></i>
                            <h5 class="text-muted mt-3">No Borrowed Books</h5>
                            <p class="text-muted">This user hasn't borrowed any books yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

