@model List<UserType>

@{
    ViewData["Title"] = "Members Types";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            👑 Users Types
        </h2>
        <div class="d-flex gap-2">
            <a asp-controller="Admins" asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to Home
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-primary">
                    <tr>
                        <th class="ps-4">Type</th>
                        <th class="text-center">Total Books</th>
                        <th class="text-center">Borrowing Duration (Days)</th>
                        <th class="text-center">Late Fee per Day</th>
                        <th class="text-center">Users Count</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model is not null && Model.Any())
                    {
                        foreach (var userType in Model)
                        {
                            <tr>
                                <td class="ps-4 align-middle fw-medium">@userType.TypeName</td>
                                <td class="text-center align-middle">
                                    @userType.ExtraBooks
                                </td>
                                <td class="text-center align-middle">@userType.ExtraDays</td>
                                <td class="text-center align-middle">@userType.ExtraPenalty ر.س</td>
                                <td class="text-center align-middle">
                                    @(userType.Users?.Count() ?? 0)
                                </td>
                                <td class="text-center align-middle">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-controller="MembersTypes" asp-action="Edit" asp-route-id="@userType.Id" class="btn btn-outline-info btn-sm">
                                            <i class="bi bi-pencil me-1"></i> Edit
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="bi bi-info-circle text-info me-2"></i> No Users Types found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>