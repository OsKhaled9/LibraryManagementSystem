@model Category

@{
    ViewData["Title"] = "Details";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 p-3">
    <div class="card shadow-lg rounded-4" style="max-width: 800px; width:100%;">
        <div class="card-header bg-primary text-white rounded-top-4 py-3">
            <h4 class="mb-0"><i class="bi bi-folder2-open me-2"></i>Category Details</h4>
        </div>
        <div class="card-body p-5">
            <h2 class="mb-3 text-primary">@Model.Name</h2>
            <p class="text-muted fs-5">@Model.Description</p>

            <h5 class="mt-4">
                <i class="bi bi-book-half me-2"></i>
                Count Books in this Category:
                <span class="badge bg-primary fs-6">@Model.Books?.Count</span>
            </h5>

            @if (Model.Books is not null && Model.Books.Any())
            {
                <ul class="list-group list-group-flush mt-3">
                    @foreach (var book in Model.Books)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                            <div>
                                <strong class="fs-5">@book.Title</strong><br />
                                <small class="text-muted">@book.Author</small>
                            </div>
                            <span class="badge bg-primary rounded-pill fs-6">Book</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-danger mt-3 fs-5"><i class="bi bi-exclamation-circle me-1"></i>No books in this category.</p>
            }
        </div>
        <div class="card-footer bg-white border-0 py-3">
            <a asp-controller="Categories" asp-action="Index" class="btn btn-primary px-4">
                <i class="bi bi-journals me-2"></i>All Categories
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="bi bi-house-door me-2"></i>Back to Home
            </a>
        </div>
    </div>
</div>